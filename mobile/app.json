{
  "expo": {
    "name": "DishFlow",
    "slug": "dishflow",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "dishflow",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F7F3EE"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dishflow.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "DishFlow needs camera access to scan ingredients and barcodes for your pantry.",
        "NSPhotoLibraryUsageDescription": "DishFlow needs photo library access to save and view recipe images.",
        "NSPhotoLibraryAddUsageDescription": "DishFlow needs permission to save recipe images to your photo library.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#C19A6B"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.dishflow.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "df1758ad-1ec3-4181-9a1b-a00ccf378304"
      }
    }
  }
}
