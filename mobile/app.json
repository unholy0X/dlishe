{
  "expo": {
    "scheme": "dlishe",
    "name": "Dlishe",
    "slug": "dlishe",
    "version": "8.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#111111"
    },
    "ios": {
      "bundleIdentifier": "com.dlishe.app",
      "buildNumber": "1",
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSCameraUsageDescription": "DLISHE uses the camera to scan recipes from photos and pantry items",
        "NSPhotoLibraryUsageDescription": "DLISHE lets you extract recipes from photos in your library",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.dlishe.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-web-browser",
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "DLISHE accesses your photos to extract recipes",
          "cameraPermission": "DLISHE uses the camera to scan recipes and pantry items"
        }
      ],
      "expo-apple-authentication",
      "@sentry/react-native"
    ],
    "extra": {
      "eas": {
        "projectId": "42f23a45-0d0c-401a-9668-45b87622f23c"
      },
      "router": {}
    },
    "owner": "0xunholy"
  }
}